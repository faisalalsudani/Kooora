<%= form_for [@team, @match], :html => {:class => "well form-horizontal"} do |f| %>
  <%= f.hidden_field :team_id %>
  <div class="control-group">
      <%= f.label :away_team, :class => "control-label" %>
      <div class="controls"><%= f.text_field :team_id %></div>
  </div>
  <div class="control-group">
      <%= f.label :home_team, :class => "control-label" %>
      <div class="controls"><%= f.text_field :team_id %></div>
  </div>
  <div class="form-actions">
    <%= f.submit "Create Match", :class => "btn" %>
  </div>
<% end %>
