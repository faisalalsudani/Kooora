<h2>Add new match</h2>
<%= form_for [@team, @match], :html => {:class => "well form-horizontal"} do |f| %>
<%= f.hidden_field :team_id %>
  <div class="control-group">
      <%= f.label :homeTeam, :class => "control-label" %>
      <div class="controls"><%= f.text_field :homeTeam_id %></div>
  </div>
  <div class="control-group">
      <%= f.label :awayTeam, :class => "control-label" %>
      <div class="controls"><%= f.text_field :awayTeam_id %></div>
  </div>
  <div class="form-actions">
    <%= f.submit "Create Game", :class => "btn" %>
  </div>
<% end %>
